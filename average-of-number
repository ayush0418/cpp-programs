#include<iostream>
using namespace std;

int main()
{
    int i,n;
    float a[10],sum=0.0,average;

    cout<< "Enter the number of data: ";
    cin>>n;

    while(n>10 || n<=0)
    {
           cout<<"\n Error! number should in range of (1 to 10).";
	   cout<<"\n Enter the number again: ";
	   cin>>n;
    }

    for(i=0,i<=n;i++)
    {
           cout<< i+1<<"\n .Enter number: ";
	   cin>>a[i];
	   sum = sum +a [i];
    }

    average = sum/n;
    cout<<"\n \n Average = "<<average;

    return 0;
}


/*    OUTPUT OF PROFGRAM
       
      Enter the number of data: 5
      
      1.Enter number: 10
      2.Enter number: 20
      3.Enter number: 30
      4.Enter number: 40
      5.Enter number: 50
      
      AVERAGE = 30
