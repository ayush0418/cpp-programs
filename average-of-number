#include<iostream>
using namespace std;

int main()
{
    int i,n;
    float a[10],sum=0.0,average;

    cout<< "enter the number of data: ";
    cin>>n;

    while(n>10 || n<=0)
    {
           cout<<"Error! number should in range of (1 to 10).";
	   cout<<"Enter the number again: ";
	   cin>>n;
    }

    for(i=0,i<=n;i++)
    {
           cout<< i+1<<".enter number:";
	   cin>>a[i];
	   sum = sum +a [i];
    }

    average = sum/n;
    cout<<"Average ="<<average;

    return 0;
}
